<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Trash - EON Drive</title>
  <%- include('./partial/stylesheet') %>
    <%- include('./partial/script') %>
      <!-- css internal -->
      <style>
        .form-check-input {
          border-color: darkgray;
        }
        div {
          /* border: 1px dashed; */
        }
        table.dataTable tbody td {
          vertical-align: middle;
        }

        .custom-operation-btn {
          background-color: #f8f5ef;
        }
        .custom-operation-btn:hover {
          background-color: #f8f5ef;
          box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
        }
        .custom-operation-strong-btn {
          background-color: #f8f5ef;
        }
        .custom-operation-strong-btn:hover {
          background-color: #eee5d4;
          box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
        }
        .noty_theme__custom-theme.noty_bar {
          background-color: #f8f5ef;
          width: 20vw;
          height: auto;
          max-height: 50vh;
          border-radius: 5px;
          overflow-y: auto;
          word-wrap: break-word;
          padding: 10px;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .btn-custom-yes {
          background-color: #f8f5ef;
        }

        .btn-custom-yes:hover {
          background-color: #f8f5ef;
          box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
        }

        .btn-custom-no:hover {
          box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
        }

        .confirm-msg {
          width: 100%;
          white-space: normal;
          word-break: break-word;
          font-size: large;
        }
        .delete-parent-path {
          font-size: smaller;
          color: gray;
        }
      </style>
</head>

<body>
  <div id="root">
    <%- include('./partial/header') %>
      <!-- main block start -->
      <div class="container content-block" style="padding-bottom: 16vh;">
        <div class="row">
          <!-- left  -->
          <%- include('./partial/left') %>
            <!-- right  -->
            <div class="col-11 d-flex flex-column align-items-start">
              <div class="d-flex align-items-center my-2" style="width: 100%;">
                <div>
                  <h4>Deleted</h4>
                </div>
              </div>
              <div class="d-flex align-items-center mb-2" style="width: 100%;">
                <div>
                  <span>You can restore any file deleted in the last 30 days.</span>
                </div>
              </div>
              <!-- BUTTON  -->
              <div style="width: 100%; height: 50px;" class="d-flex align-items-center">
                <div>
                  <button type="button" id="restore-delete-btn" class="me-2 btn custom-operation-btn" data-bs-toggle="modal"
                    data-bs-target="#confirmRestoreModal" style="display: none;">
                    Restore
                  </button>
                </div>
                <div>
                  <button type="button" id="perm-delete-btn" class="me-2 btn custom-operation-strong-btn"
                    data-bs-toggle="modal" data-bs-target="#confirmPermDeleteModal" style="display: none;">
                    Permanently Delete
                  </button>
                </div>
              </div>
              <!-- sub -->
              <div class="col-12 d-flex flex-column align-items-start">
                <!-- table  -->
                <div style="width: 100%;">
                  <table class="table" id="trash-table">
                    <thead class="table-header">
                      <tr>
                        <th><input type="checkbox" name="select-all" id="select-all"></th>
                        <th>Name</th>
                        <th>Deleted</th>
                      </tr>
                    </thead>
                  </table>
                </div>
              </div>
            </div>
        </div>
        <!-- Modal for confirm restore  -->
        <div class="modal fade" id="confirmRestoreModal" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body">
                <div id="confirm-restore-msg" class="text-wrap confirm-msg"></div>
                <div class="d-flex justify-content-end pt-3">
                  <button type="button" class="btn btn-custom-yes ms-2" id="confirm-restore-btn">
                    Yes
                  </button>
                  <button type="button" class="btn btn-custom-no ms-2" data-bs-dismiss="modal">
                    No
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Modal for confirm restore  -->
        <!-- Modal for confirm perm delete  -->
        <div class="modal fade" id="confirmPermDeleteModal" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body">
                <div id="confirm-perm-delete-msg" class="fs-5 text-wrap confirm-msg"></div>
                <div class="pt-2">
                  You won't be able to restore permanently deleted files.
                </div>
                <div class="d-flex justify-content-end pt-3">
                  <button type="button" class="btn btn-custom-yes ms-2" id="confirm-perm-delete-btn">
                    Yes
                  </button>
                  <button type="button" class="btn btn-custom-no ms-2" data-bs-dismiss="modal">
                    No
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Modal for confirm delete end  -->
        <!-- Modal for reminder  -->
        <div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body">
                <div id="error-msg" class="text-wrap"></div>
              </div>
            </div>
          </div>
        </div>
        <!-- Modal for reminder end  -->
        <!-- main block end -->
      </div>
      <%- include('./partial/footer') %>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script type="module" src="/js/pages/member/header.js"></script>
  <script type="module" src="/js/pages/member/trash.js"></script>
  <script>
    $(document).ready(function ()
    {
      $('.dropdown-toggle').dropdown();
    });
  </script>
</body>

</html>