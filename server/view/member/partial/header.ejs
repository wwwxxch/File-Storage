<style>
  * {
    font-family: 'Lato', sans-serif !important;
  }

  div, p {
    /* border: 1px dashed; */
  }

  header {
    padding-top: 2vh;
  }

  .header-logo {
    height: 11vh;
    max-height: 100%;
    width: auto;
  }

  .noti-div, .user-div {
    padding-bottom: 1.5vh;
  }

  .bell-svg {
    height: 5.8vh;
    max-height: 100%;
    width: auto;
    padding-bottom: 0.2vh;
  }

  .user-svg {
    height: 6vh;
    max-height: 100%;
    width: auto;
  }

  .header-btn {
    border: none;
    background-color: transparent;
  }

  .header-block {
    background-color: white;
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 99;
  }

  .content-block {
    padding-top: 16vh;
    padding-bottom: 10vh;
  }

  #noti-ul {
    width: 25vw;
  }

  .noti-item:hover {
    cursor: default;
  }

  .noti-owner {
    color: #191c5b;
  }

  .noti-ff {
    color: #1354a5;
  }

  .noti-time {
    font-size:small;
    color: darkgray;
  }

  .new-noti {
    background-color: rgb(255, 250, 243);
  }

  .badge-notification {
    position: absolute;
    top: 0;
    right: 0;
    font-size: 0.75rem;
    line-height: 1;
    padding: 0.25rem 0.4rem;
    border-radius: 10rem;
  }

  .share-link {
    text-decoration: none;
    color: #1354a5;
  }
  
  .share-link:hover {
    font-weight: bolder;
  }

  .noti-item:active {
    background-color: #f8f9fa;
    color: black;
  }
</style>
<div class="container header-block">
  <header class="d-flex flex-wrap align-items-stretch justify-content-md-between border-bottom">
    <!-- left  -->
    <div class="col-md-3 mb-2 mb-md-0">
      <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
        <img class="header-logo" src="/img/header-logo.jpg">
      </a>
    </div>

    <!-- right  -->
    <div class="col-md-2 d-flex justify-content-end align-items-end">
      <!-- bell icon  -->
      <div class="ms-5 noti-div dropdown">
        <button class="header-btn hidden-arrow noti-btn" type="button" id="dropdownMenuNoti" data-bs-toggle="dropdown"
          data-bs-display="static" data-mdb-toggle="dropdown" aria-expanded="false">
          <svg class="bell-svg" fill="currentColor" viewBox="0 0 36 36" version="1.1"
            preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink">
            <path
              d="M32.51,27.83A14.4,14.4,0,0,1,30,24.9a12.63,12.63,0,0,1-1.35-4.81V15.15A10.81,10.81,0,0,0,19.21,4.4V3.11a1.33,1.33,0,1,0-2.67,0V4.42A10.81,10.81,0,0,0,7.21,15.15v4.94A12.63,12.63,0,0,1,5.86,24.9a14.4,14.4,0,0,1-2.47,2.93,1,1,0,0,0-.34.75v1.36a1,1,0,0,0,1,1h27.8a1,1,0,0,0,1-1V28.58A1,1,0,0,0,32.51,27.83ZM5.13,28.94a16.17,16.17,0,0,0,2.44-3,14.24,14.24,0,0,0,1.65-5.85V15.15a8.74,8.74,0,1,1,17.47,0v4.94a14.24,14.24,0,0,0,1.65,5.85,16.17,16.17,0,0,0,2.44,3Z">
            </path>
            <path class="clr-i-outline clr-i-outline-path-2"
              d="M18,34.28A2.67,2.67,0,0,0,20.58,32H15.32A2.67,2.67,0,0,0,18,34.28Z"></path>
          </svg>
          <!-- notification  -->
          <span class="badge rounded-pill badge-notification bg-danger position-absolute p-1 d-none">
            <span class="visually-hidden">New alerts</span>
          </span>
        </button>
        <div class="dropdown-menu dropdown-menu-end dropdown-menu-start" aria-labelledby="dropdownMenuNoti"
          id="noti-ul">
          <div class="dropdown-item" id="no-noti">No Notification</div>
        </div>
      </div>
      
      <!-- user icon  -->
      <div class="ms-3 user-div dropdown">
        <button class="header-btn hidden-arrow" type="button" id="dropdownMenuUser" data-bs-toggle="dropdown"
          data-mdb-toggle="dropdown" aria-expanded="false">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-person user-svg" viewBox="0 0 16 16">
            <path
              d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
          </svg>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuUser">
          <li><button class="dropdown-item" id="profile-btn" data-bs-toggle="modal" data-bs-target="#profileModal">Profile</button></li>
          <li><button class="dropdown-item" id="logout-btn">Logout</button></li>
        </ul>
      </div>
    </div>
    <!-- right end  -->
  </header>
</div>
<!-- Profile Modal -->
<div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title user-name" id="profileModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row mb-3">
          <div class="col-4">
            <p class="fw-bold mb-0">Email:</p>
          </div>
          <div class="col-8">
            <p class="mb-0 user-email"></p>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4">
            <p class="fw-bold mb-0">Registered Date:</p>
          </div>
          <div class="col-8">
            <p class="mb-0 user-created"></p>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4">
            <p class="fw-bold mb-0">Plan:</p>
          </div>
          <div class="col-8">
            <p class="mb-0 user-plan"></p>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p class="fw-bold mb-0">Current Usage:</p>
          </div>
          <div class="col-8">
            <p class="mb-0 user-usage"></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
