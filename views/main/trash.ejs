<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Trash - EON Drive</title>
  <%- include('../partials/main_stylesheet') %>
  <%- include('../partials/main_script') %>
  <!-- css internal -->
  <style>
    .form-check-input {
      border-color: darkgray;
    }
  </style>
</head>

<body>
  <div id="root">
    <%- include('../partials/main_header') %>
      <!-- main block start -->
      <div class="container content-block">
        <div class="row">
          <!-- left  -->
          <%- include('../partials/main_left') %>
            <!-- right  -->
            <div class="col-11 d-flex flex-column align-items-start">
              <div class="d-flex align-items-center justify-content-md-between my-2" style="width: 100%;">
                <div>
                  <h4>Deleted</h4>
                </div>
              </div>
              <!-- BUTTON  -->
              <div style="width: 100%; height: 50px;" class="d-flex align-items-center">
                <div>
                  <button type="button" id="restore-delete-btn" class="btn btn-secondary me-2" style="display: none;">
                    Restore
                  </button>
                </div>
                <div>
                  <button type="button" id="perm-delete-btn" class="btn btn-outline-secondary me-2"
                    style="display: none;">
                    Permanently Delete
                  </button>
                </div>
              </div>
              <!-- sub -->
              <div class="col-12 d-flex flex-column align-items-start">
                <!-- table  -->
                <div style="width: 100%;">
                  <table class="table" id="trash-table">
                    <thead class="table-header">
                      <tr>
                        <th><input type="checkbox" name="select-all" id="select-all"></th>
                        <th>Name</th>
                        <th>Deleted</th>
                      </tr>
                    </thead>
                  </table>
                </div>
              </div>
            </div>
        </div>
        <!-- main block end -->
      </div>
      <%- include('../partials/main_footer') %>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script type="module" src="/js/pages/main/header.js"></script>
  <script type="module" src="/js/pages/main/trash.js"></script>
  <script>
    $(document).ready(function ()
    {
      $('.dropdown-toggle').dropdown();
    });
  </script>
</body>

</html>